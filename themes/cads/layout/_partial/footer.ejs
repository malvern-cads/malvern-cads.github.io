<section id="footer" class="bg-dark">
  <div class="container">
    <div class="row">
      <div class="col-md-6">
        <h5><%= config.title %></h5>
        <p class="text-muted d-none d-md-block"><%= config.subtitle %></p>
        <p class="text-muted">
          Powered by <a href="https://hexo.io/">Hexo Blog Framework</a>.
        </p>
        <p class="text-muted">
          Licensed under the
          <a href="https://www.gnu.org/licenses/gpl-3.0.en.html">GNU GPL v3.0 licence</a>
          and source code is available on
          <a href="https://www.github.com/malvern-cads/malvern-cads.github.io/tree/source">GitHub</a>.
        </p>
        <p class="text-muted">
          <small>
            <i>
              Running <%= gitinfo() %>, built on <%= full_date(Date.now()); %>.
            </i>
          </small>
        </p>
      </div>
      <div class="col-md-6 text-md-right">
        <h5>Nav</h5>
        <ul class="nav flex-column">
          <% for (var i in theme.nav) { %> 
            <li>
              <a href="<%- url_for(theme.nav[i]) %>"><%= __('nav.'+i).replace("nav.", "") %></a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </div>
</section>
